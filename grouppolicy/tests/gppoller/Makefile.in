BUILD_ROOT = @builddir@/../..
SRC_ROOT=@srcdir@/../..

SHELL= /bin/sh
VPATH= @srcdir@

subdirs= @subdirs@
top_srcdir= @top_srcdir@
srcdir = @srcdir@
prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = ${exec_prefix}/bin
sbindir = ${exec_prefix}/sbin
infodir = ${prefix}/info
libdir = ${prefix}/lib
mandir = ${prefix}/man/man1

DESTDIR=@DESTDIR@
CC = @CC@
CPPFLAGS = @CPPFLAGS@
CFLAGS = $(CPPFLAGS) @CFLAGS@
LDFLAGS = @LDFLAGS@
LIBS = @LIBS@
INSTALL = @INSTALL@

CFLAGS += @GP_AGENT_INCLUDE@

LIBS = -Bstatic @GPAGENT_LDFLAGS@ -Bdynamic @GP_AGENT_LDFLAGS@
LIBS += @THREAD_LIB@
LIBS += -lgssapi_krb5 -lkrb5
LIBS += -lldap
LIBS += @CRYPTOLIB@ @LIBS@ -lm
LIBS += @CENTUTILS_LIBS@

OBJS = main.o

PROGRAM = gppoller

all : $(PROGRAM)

$(PROGRAM) : $(OBJS) @GP_AGENT_DEP_LIBS@
	$(CC) -o $@ $(OBJS) $(LDFLAGS) $(LIBS)

$(OBJS) : %.o : %.c
	$(CC) -c $(CFLAGS) $< -o $@

clean :
	$(RM) $(OBJS) $(PROGRAM)

distclean: clean
	$(RM) Makefile

install: all
	@echo $(DESTDIR)
	$(top_srcdir)/mkinstalldirs $(DESTDIR)$(bindir)
	$(top_srcdir)/mkinstalldirs $(DESTDIR)$(libdir)
	$(INSTALL) $(PROGRAM) $(DESTDIR)$(sbindir)

uninstall:
	-/bin/rm -f $(DESTDIR)$(bindir)/$(PROGRAM)

