BUILD_ROOT = @builddir@/../..
SRC_ROOT=@srcdir@/../..

SHELL= /bin/sh
VPATH= @srcdir@

subdirs= @subdirs@
top_srcdir= @top_srcdir@
srcdir = @srcdir@
prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = ${exec_prefix}/bin
sbindir = ${exec_prefix}/sbin
infodir = ${prefix}/info
libdir = ${prefix}/lib
mandir = ${prefix}/man/man1

DESTDIR=@DESTDIR@
CC = @CC@
CPPFLAGS = @CPPFLAGS@
CFLAGS = $(CPPFLAGS) @CFLAGS@
LDFLAGS = @LDFLAGS@
LIBS = @LIBS@
INSTALL = @INSTALL@

CFLAGS += @GP_CSES_INCLUDE@
CFLAGS += @LIBXML2_CPPFLAGS@

LDFLAGS += @GP_CSES_LDFLAGS@
LDFLAGS += @LIBXML2_LDFLAGS@
LDFLAGS += @CENTUTILS_LDFLAGS@

LIBS += @LIBXML2_LIBS@
LIBS += @GP_CSES_DEP_LIBS@
LIBS += @THREAD_LIB@
LIBS += -lgssapi_krb5 -lkrb5
LIBS += -lm
LIBS += @CENTUTILS_LIBS@

OBJS = main.o

PROGRAM = test_groups

all : $(PROGRAM)

$(PROGRAM) : $(OBJS) @GP_CSES_DEP_LIBS@
	$(CC) -o $@ $(OBJS) $(LDFLAGS) $(LIBS)

$(OBJS) : %.o : %.c
	$(CC) -c $(CFLAGS) $< -o $@

clean :
	$(RM) $(OBJS) $(PROGRAM)

distclean: clean
	$(RM) Makefile

install: all
	@echo $(DESTDIR)
	$(top_srcdir)/mkinstalldirs $(DESTDIR)$(bindir)
	$(top_srcdir)/mkinstalldirs $(DESTDIR)$(libdir)
	$(INSTALL) $(PROGRAM) $(DESTDIR)$(sbindir)

uninstall:
	$(RM) $(DESTDIR)$(bindir)/$(PROGRAM)

