make()
{
    API_SOURCES="\
       config.c          \
       globals.c         \
       state.c           \
       loginfo.c"

    mk_group \
        GROUP=api \
        GROUPS="../../utils/utils" \
        SOURCES="$API_SOURCES" \
        INCLUDEDIRS=". ../include ../../include" \
        HEADERDEPS="reg/lwreg.h reg/regutil.h lwmsg/lwmsg.h lwadvapi.h" \
        LIBDEPS="rsyslogging rsysclientapi regclient rsutils lwmsg lwadvapi ldap_r $LIB_PTHREAD $LIB_DL"
}
