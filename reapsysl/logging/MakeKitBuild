SUBDIRS="logging_r"

make()
{
    LOGGING_SOURCES="\
	file.c \
	globals.c \
	logging.c \
	syslog.c"

    mk_library \
        LIB=rsyslogging \
        SOURCES="$LOGGING_SOURCES" \
        INCLUDEDIRS=". ../include" \
        HEADERDEPS="lwmsg/lwmsg.h lwadvapi.h reg/lwreg.h" \
        LIBDEPS="lwbase lwbase_nothr lwmsg lwmsg_nothr $LIB_PTHREAD"
}
