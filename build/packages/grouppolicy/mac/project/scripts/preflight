#!/bin/bash

GPAGENT_NAME=com.likewisesoftware.gpagentd
GPAGENT_DAEMON=/Library/LaunchDaemons/$GPAGENT_NAME.plist

if [ -f $GPAGENT_DAEMON ]; then
   launchctl list | grep $GPAGENT_NAME > /dev/null
   if [ $? -eq 0 ]; then
      launchctl stop $GPAGENT_NAME
      touch /tmp/gpagentd.restart
   fi

   launchctl unload $GPAGENT_DAEMON
   rm $GPAGENT_DAEMON
fi
