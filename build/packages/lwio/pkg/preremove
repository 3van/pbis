#!/bin/sh

# if this is a local deinstall, stop the Likewise IO Daemon
if [ -z "$PKG_INSTALL_ROOT" ]
then
   ZONENAME="`zonename 2>/dev/null`"
   if [ -z "$ZONENAME" ]; then
       PSOPTS="-e"
   else
       PSOPTS="-z $ZONENAME"
   fi
   LWIOD=`ps $PSOPTS -o pid,comm | grep lwiod | awk '{print $1}'`
   [ ! -z "$LWIOD" ] && kill -TERM $LWIOD
   sleep 2
fi
