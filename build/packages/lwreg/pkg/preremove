#!/bin/sh

# if this is a local deinstall, stop the Likewise Registry daemon
if [ -z "$PKG_INSTALL_ROOT" ]
then
   ZONENAME="`zonename 2>/dev/null`"
   if [ -z "$ZONENAME" ]; then
       PSOPTS="-e"
   else
       PSOPTS="-z $ZONENAME"
   fi
   LWREGD=`ps $PSOPTS -o pid,comm | grep lwregd | awk '{print $1}'`
   [ ! -z "$LWREGD" ] && kill -TERM $LWREGD
   sleep 2
fi
