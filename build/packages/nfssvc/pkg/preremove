#!/bin/sh

# if this is a local deinstall, stop the Likewise NFS Service Daemon
if [ -z "$PKG_INSTALL_ROOT" ]
then
   ZONENAME="`zonename 2>/dev/null`"
   if [ -z "$ZONENAME" ]; then
       PSOPTS="-e"
   else
       PSOPTS="-z $ZONENAME"
   fi
   LWNFSSVCD=`ps $PSOPTS -o pid,comm | grep nfssvcd | awk '{print $1}'`
   [ ! -z "$LWNFSSVCD" ] && kill -TERM $LWNFSSVCD
   sleep 2
fi
