#!/bin/bash

LWMGMT_NAME=com.likewisesoftware.lwmgmtd
LWMGMT_DAEMON=/Library/LaunchDaemons/$LWMGMT_NAME.plist

if [ -f $LWMGMT_DAEMON ]; then
   launchctl list | grep $LWMGMT_NAME > /dev/null
   if [ $? -eq 0 ]; then
      launchctl stop $LWMGMT_NAME
      touch /tmp/lwmgmtd.restart
   fi

   launchctl unload $LWMGMT_DAEMON
   rm $LWMGMT_DAEMON
fi

