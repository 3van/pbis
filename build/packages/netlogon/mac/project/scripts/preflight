#!/bin/bash

NETLOGON_NAME=com.likewisesoftware.netlogond
NETLOGON_DAEMON_OLD=/System/Library/LaunchDaemons/$NETLOGON_NAME.plist
NETLOGON_DAEMON=/Library/LaunchDaemons/$NETLOGON_NAME.plist

if [ -f $NETLOGON_DAEMON_OLD ]; then
   launchctl list | grep $NETLOGON_NAME > /dev/null
   if [ $? -eq 0 ]; then
      launchctl stop $NETLOGON_NAME
   fi

   launchctl unload $NETLOGON_DAEMON_OLD
   rm $NETLOGON_DAEMON_OLD
fi

if [ -f $NETLOGON_DAEMON ]; then
   launchctl list | grep $NETLOGON_NAME > /dev/null
   if [ $? -eq 0 ]; then
      launchctl stop $NETLOGON_NAME
   fi

   launchctl unload $NETLOGON_DAEMON
   rm $NETLOGON_DAEMON
fi

