#!/bin/bash

LSASS_NAME=com.likewisesoftware.lsassd
LSASS_DAEMON=/Library/LaunchDaemons/$LSASS_NAME.plist

if [ -f $LSASS_DAEMON ]; then
   launchctl list | grep $LSASS_NAME > /dev/null
   if [ $? -eq 0 ]; then
      launchctl stop $LSASS_NAME
      touch /tmp/lsassd.restart
   fi

   launchctl unload $LSASS_DAEMON
   rm $LSASS_DAEMON
fi

PLUGIN_DIR_OPEN=LWIDSPlugIn.dsplug
SRC_DIR=/opt/likewise/lib
FRAMEWORK_DIR="/System/Library/Frameworks/DirectoryService.framework/Resources/Plugins"

if [ -h $FRAMEWORK_DIR/$PLUGIN_DIR_OPEN ]; then
   /bin/rm -f $FRAMEWORK_DIR/$PLUGIN_DIR_OPEN
fi

