#!/bin/sh

# if this is a local deinstall, stop the Likewise LSASS daemon
if [ -z "$PKG_INSTALL_ROOT" ]
then
   if [ -x /opt/likewise/bin/domainjoin-cli ]; then
       /opt/likewise/bin/domainjoin-cli configure --disable nsswitch >/dev/null
       /opt/likewise/bin/domainjoin-cli configure --disable pam >/dev/null
   fi
   LSASSD=`ps -e -o pid,comm | grep lsassd | awk '{print $1}'`
   [ ! -z "$LSASSD" ] && kill -TERM $LSASSD
   sleep 2
fi
