#!/bin/sh

# if this is a local deinstall, stop the Likewise Eventlog daemon
if [ -z "$PKG_INSTALL_ROOT" ]
then
   ZONENAME="`zonename 2>/dev/null`"
   if [ -z "$ZONENAME" ]; then
       PSOPTS="-e"
   else
       PSOPTS="-z $ZONENAME"
   fi
   EVENTLOGD=`ps $PSOPTS -o pid,comm | grep eventlogd | awk '{print $1}'`
   [ ! -z "$EVENTLOGD" ] && kill -TERM $EVENTLOGD
   sleep 2
fi
