# Basic build settings

BUILD_VENDOR="likewise"
BUILD_PREFIX="/opt/${BUILD_VENDOR}"
BUILD_SYSCONFDIR="/etc/${BUILD_VENDOR}"
BUILD_LOCALSTATEDIR="/var"

# Build product set

BUILD_PRODUCTS="lwiso qatools lwtest"

# We only want to srcdist for lwiso

BUILD_SRCDIST="lwiso"

BUILD_PLATFORM_PRODUCTS="lwiso"

my_check_is_rhel_21()
{
    if [ -f /etc/redhat-release ]; then
        grep "Red Hat Linux .* Server release 2.1" /etc/redhat-release
        if [ $? -eq 0 ]; then
            return 0
        fi
    fi
    return 1
}

case "${BUILD_OS_TYPE}" in
    linux)
	if ! my_check_is_rhel_21 >/dev/null 2>&1
	then
	    BUILD_PRODUCTS="$BUILD_PRODUCTS djgtk"
	fi		   
	;;
    freebsd | solaris)
	;;
    darwin)
	BUILD_PRODUCTS="$BUILD_PRODUCTS"
	;;
esac
