make()
{
    mk_program \
        PROGRAM=gsssimple-server \
        INSTALLDIR="$LW_TOOL_DIR" \
        SOURCES="gss-server.c" \
        INCLUDEDIRS=". ../../include" \
        HEADERDEPS="lw/base.h krb5.h gssapi.h ntlm/sspintlm.h" \
        LIBDEPS="lwbase_nothr gssapi_krb5 krb5 k5crypto"

    lw_add_tool_target "$result"
}
